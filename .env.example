# BST Orchestration Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Token Configuration
# ===========================================
BST_TOTAL_BUDGET=100000

# ===========================================
# Logging Configuration
# ===========================================
BST_LOG_LEVEL=INFO
BST_LOG_PATH=logs/
BST_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===========================================
# Database Configuration (M122)
# ===========================================
BST_DB_TYPE=sqlite
BST_DB_PATH=data/tenant.db
# For PostgreSQL (production):
# BST_DB_HOST=localhost
# BST_DB_PORT=5432
# BST_DB_NAME=tenant_db
# BST_DB_USER=your_username
# BST_DB_PASSWORD=your_password

# ===========================================
# API Configuration (M211, M212)
# ===========================================
BST_API_BASE_URL=http://localhost:8000
BST_API_TIMEOUT=30
BST_API_RETRY_COUNT=3
# BST_API_KEY=your_api_key_here

# ===========================================
# File Paths
# ===========================================
BST_CONFIG_PATH=config/settings.yaml
BST_EXCEL_PATH=data/tenants.xlsx
BST_REPORTS_PATH=reports/

# ===========================================
# Feature Flags
# ===========================================
BST_USE_MOCK=true
BST_DEBUG_MODE=false
BST_ENABLE_METRICS=false

# ===========================================
# Performance Tuning
# ===========================================
BST_CACHE_ENABLED=true
BST_CACHE_TTL=300
BST_MAX_CONCURRENT_REQUESTS=10
